<li>
  <small class="text-success">Submitted <%= time_ago_in_words(comment.created_at) %> 
  ago by <%= comment.user.email %> </small>

  <% if user_signed_in? && comment.user_id == current_user.id %>
    <%= link_to "Delete", comment_path(comment), method: :delete, class: "btn btn-danger navbar-btn btn-xs" %>
  <% end %>
  <br>

  <div class="text-info">
    <%= comment.text %> 
  </div>
  <% if user_signed_in? %>
    <%= form_for [comment, Comment.new] do |f| %>
          <%= f.text_field :text, placeholder: "Add reply to comment" %>
          <%= f.submit "Reply to comment", class: "btn btn-success navbar-btn btn-xs" %>        
    <% end %>
  <% end %>
      
    <ul>
        <%= render comment.comments %>
    </ul>
</li>